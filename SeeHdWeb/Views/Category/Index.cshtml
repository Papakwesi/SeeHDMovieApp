@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}



<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            Category List
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Category" asp-action="Create">
                <i class="bi bi-plus-square"></i>
                Create New Category
            </a>
        </div>
    </div>
    <br />


    <table class="table table-bordered table-striped" style="width: 100%; border-collapse: collapse;">
        <thead>
            <tr>
                <th style="border: 1px solid #333; padding: 8px; text-align: left; background-color: #f2f2f2;">
                    Name
                </th>
                <th style="border: 1px solid #333; padding: 8px; text-align: left; background-color: #f2f2f2;">
                    Description
                </th>
                <th style="border: 1px solid #333; padding: 8px; text-align: left; background-color: #f2f2f2;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td style="border: 1px solid #333; text-align: left; width: 50%;">
                        @obj.Name
                    </td>
                    <td style="border: 1px solid #333; text-align: left; width: 30%;">
                        @obj.Description
                    </td>
                    <td style="border: 1px solid #333;">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>
                                Edit
                            </a>
                            
                            <form asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this item?');" style="display:inline;">
                                <button type="submit" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash3"></i>
                                    Delete
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

