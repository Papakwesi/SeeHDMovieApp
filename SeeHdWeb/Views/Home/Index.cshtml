@model IEnumerable<SeeHdWeb.Models.Movies>

@{
    ViewData["Title"] = "Home Page";
}

<style>
    .card:hover {
        transform: translateY(-5px);
        transition: 0.3s ease;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
    }

    .card-img-top {
        height: 100%;
        object-fit: cover;
    }
</style>




<div class="row g-4">
    @foreach (var movie in Model)
    {
        <div class="col-lg-3 col-md-4 col-sm-6">
            <div class="card h-100 shadow-sm border-0">
                <img src="@movie.ImageUrl" class="card-img-top rounded-top" alt="@movie.Title" />
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title text-primary fw-bold">@movie.Title</h5>
                    <p class="card-text text-muted mb-2">Rating: @movie.Rating / 5</p>
                    <div class="mt-auto">
                        <a class="btn btn-outline-primary w-100" asp-action="MovieDetails" asp-route-movieId="@movie.Id">Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
